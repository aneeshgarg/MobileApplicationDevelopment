<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thetechdork.rottentomatoes.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.thetechdork.rottentomatoes.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thetechdork.rottentomatoes.activity.UsernameActivity"
            android:label="@string/title_activity_username" >
        </activity>
        <activity
            android:name="com.thetechdork.rottentomatoes.activity.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name="com.thetechdork.rottentomatoes.activity.MoviesActivity"
            android:label="@string/title_activity_movies" >
        </activity>
        <activity
            android:name="com.thetechdork.rottentomatoes.activity.MovieActivity"
            android:label="@string/title_activity_movie"
            android:parentActivityName="BaseActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="BaseActivity" />
        </activity>
        <activity
            android:name="com.thetechdork.rottentomatoes.activity.MovieWebActivity"
            android:label="@string/title_activity_movie_web" >
        </activity>
        <activity
            android:name="com.thetechdork.rottentomatoes.activity.StatisticsActivity"
            android:label="@string/title_activity_statistics" >
        </activity>
    </application>

</manifest>
